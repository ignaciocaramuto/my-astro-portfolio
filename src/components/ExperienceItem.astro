---
const { date, title, tasks } = Astro.props;
---

<li>
  <div></div>
  <time>{date}</time>
  <h3>{title}</h3>
  {tasks.map((task: string) => <p>- {task}</p>)}
</li>

<style lang="scss">
  @import "../styles/colors.scss";
  div {
    position: absolute;
    width: 0.75rem;
    height: 0.75rem;
    background-color: $primary-color;
    border-radius: 100%;
    margin-top: 0.2rem;
    left: -0.45rem;
    border: 1px solid $primary-color;
  }

  li {
    margin-bottom: 3em;
  }

  time {
    color: $text-grey-400;
  }

  p {
    color: $text-grey-500;
  }
</style>
